@model Store.Models.User.UserProfile

@{
    Layout = "~/Views/Shared/_HeadOnlyLayout.cshtml";
}

<title>Log in</title>

<div class="panel panel-success">
    <div class="panel-heading">
        <h4>Welcome <br>Please log in!</h4>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                <label>Your name:</label>
                @Html.TextBoxFor(x => x.Login, new {@class = "form-control"})
            </div>
            <div class="form-group">
                <label>Your password:</label>
                @Html.PasswordFor(x => x.Password, new {@class = "form-control"})
            </div>
            <div class="text-center">
                <input class="btn btn-success" type="submit" value="Log in"/>
            </div>
        }
    </div>
</div>



@*Выделяем цветом выбранную по умолчанию категорию*@
<script>
    deleteAllCookies();
    document.cookie = "selectedMenuItemId=3" + ";path=/";
</script>

