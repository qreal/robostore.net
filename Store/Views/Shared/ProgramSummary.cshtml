@model Domain.Entities.Program

<div class="well">

    <div class="pull-left" style="margin-right: 10px">
        <img class="img-thumbnail" width="75" height="75"
             src="@Url.Action("GetImage", "Home",
                new { Model.ProgramID })" />
    </div>

    <h3>
        <strong>@Model.Name</strong>
        <span class="pull-right label label-primary">Version: @Model.ActualVersion</span>
    </h3>

    @using (Html.BeginForm("AddProgramToRobot", "Home"))
    {
    <div class="pull-right">
        @Html.HiddenFor(x => x.ProgramID)
        <input type="submit" class="btn btn-success" value="Send to robot" />
    </div>
    }

    <span class="lead"> @Model.Description</span>
</div>
