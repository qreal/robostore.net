@using Domain
@using Store.Services
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.css" rel="stylesheet"/>
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet"/>
    <script src="~/Scripts/jquery-2.2.1.js"></script>
    <script src="~/Scripts/jquery-2.2.1.min.js"></script>
    <script src="~/Scripts/Services/Cookies.js"></script>
    <title>@ViewBag.Title</title>
    <style>
        .navbar-right {
            float: right !important;
            margin-right: 15px;
            margin-left: 15px;
        }
    </style>
</head>
<body>

<div class="navbar navbar-inverse">
    <a class="navbar-brand" style="margin-top: 10px">
        <span class="hidden-xs">ROBOTS STORE</span>
    </a>
    <div class="pull-left" style="margin-top: 1px; margin-bottom: 1px">
        <img width="75" height="75"
             @*src="@Url.Action("GetImage", "Home", new {imageId = 26 + MoqDataGenerator.GetRandomNumber(0,9)})"/>*@
             src="@Url.Action("GetImage", "Home", new {imageId = 27})"/>
    </div>
    @if (FakeSession.User != null)
    {
        <div align="right" style="margin-top: 10px">
            <p class="navbar-text">Signed in as <b>@FakeSession.User.Login</b>
            </p>
        </div>
    }
</div>
@RenderBody()
</body>

</html>