@model IEnumerable<Store.Models.Home.LeftMenuItem>

@{
    int index = 0;
    int amount = Model.Count();
}

@foreach (var item in Model)
{
  <a href="@item.Url" class="btn btn-block btn-default btn-lg" id="leftMenuItem@(++index)">@item.Name</a>
}

<script src="~/Scripts/Menu/Menu.js"></script>

<script>
    @for (int i = 1; i <= amount; i++)
    {
        @:onClickCategory(@i);
    }
</script>
