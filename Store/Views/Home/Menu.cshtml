@model IEnumerable<string>

@{
  var categories = Model.ToArray();
}

<div>
    @Html.RouteLink(categories[0], new
{
    controller = "Robot",
    action = "ShowMyRobots",
    category = categories[0]
}, new
{
    @class = "btn btn-block btn-default btn-lg" + (ViewBag.SelectedCategory == categories[0] ? " btn-primary" : "")
})

    @Html.RouteLink(categories[1], new
{
    controller = "Robot",
    action = "AddRobotForm",
    category = categories[1]
}, new
{
    @class = "btn btn-block btn-default btn-lg" + (ViewBag.SelectedCategory == categories[1] ? " btn-primary" : "")
})

    @Html.RouteLink(categories[2], new
{
    controller = "Program",
    action = "ShowAllPrograms",
    category = categories[2]
}, new
{
    @class = "btn btn-block btn-default btn-lg" + 
    (ViewBag.SelectedCategory == categories[2] || ViewBag.SelectedCategory == null ? " btn-primary" : "")
})

   
</div>
