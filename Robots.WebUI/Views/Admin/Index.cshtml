@model IEnumerable<Robots.Domain.Entities.User> 
@{
  ViewBag.Title = "Admin: All Users";
  Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>All Users</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th>Name</th>
                <th class="text-right">Password</th>
                <th class="text-center">Actions</th>
            </tr>
            @foreach (var item in Model)
            {
            <tr>
                <td class="text-right">@item.UserID</td>
                <td>
                    @Html.ActionLink(item.Name, "EditUser", new
                    {
                        item.UserID
                    })
                </td>
                <td class="text-right">@item.Password</td>
                <td class="text-center">
                    @using (Html.BeginForm("DeleteUser", "Admin"))
                    {
                    @Html.Hidden("UserID", item.UserID)
                    <input type="submit"
                           class="btn btn-default btn-xs"
                           value="Delete" />
                    }
                </td>
            </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Add a new User", "CreateUser", null,
            new { @class = "btn btn-default" })
    </div>
</div>